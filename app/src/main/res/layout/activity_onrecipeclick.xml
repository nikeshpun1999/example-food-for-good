<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Views.Onrecipeclick">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvheading"
        android:text="Recipe details"
        android:textSize="30dp"
        android:gravity="center"/>
    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/ivrecipeimg"
        android:layout_below="@+id/tvheading"
        android:layout_marginLeft="54dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivrecipeimg"
        android:orientation="horizontal"
        android:id="@+id/lay1"
        android:layout_margin="25sp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Recipe Name is :"
            android:layout_weight="3"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/onclick_tvrecipename"
            android:textSize="15dp"
            android:layout_weight="4"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay1"
        android:orientation="horizontal"
        android:id="@+id/lay2"
        android:layout_margin="25sp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Recipe Origin is :"
            android:layout_weight="3"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/onclick_tvrecipeorigin"
            android:textSize="15dp"
            android:layout_weight="4"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay2"
        android:orientation="horizontal"
        android:id="@+id/lay3"
        android:layout_margin="25sp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Direction to make recipe:"
            android:layout_weight="3"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/onclick_tvdirection"
            android:textSize="15dp"
            android:layout_weight="4"
            />
    </LinearLayout>



</RelativeLayout>