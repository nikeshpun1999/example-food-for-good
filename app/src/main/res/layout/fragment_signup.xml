<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SignupFragment">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/dashboard"
        android:layout_margin="15sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_logo"
            android:layout_weight="2"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_menu"
            android:layout_weight="4"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Crafting!!!"
        android:id="@+id/tv_title"
        android:layout_below="@+id/dashboard"
        android:layout_margin="20sp"
        android:gravity="center"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_username"
        android:hint="Enter Username"
        android:layout_below="@+id/tv_title"
        android:layout_margin="10sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_email"
        android:hint="Enter Email"
        android:layout_below="@+id/et_username"
        android:layout_margin="10sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_password"
        android:hint="Enter password"
        android:layout_below="@+id/et_email"
        android:layout_margin="10sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_repassword"
        android:hint="Confirm password"
        android:layout_below="@+id/et_password"
        android:layout_margin="10sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_nationality"
        android:hint="Nationality"
        android:layout_below="@+id/et_repassword"
        android:layout_margin="10sp"/>

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I have read the agreement and wish to proceed."
        android:id="@+id/chb_rem"
        android:layout_below="@+id/et_nationality"
        android:layout_margin="10sp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up "
        android:id="@+id/btn_signup"
        android:layout_below="@id/chb_rem"
        android:gravity="center"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>


</FrameLayout>